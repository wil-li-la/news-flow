{
  "name": "newsflow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:api": "node scripts/dev-api.js",
    "start": "npm run dev:api",
    "mobile:start": "concurrently \"npm run dev:api\" \"npm --prefix mobile start\"",
    "mobile:ios": "concurrently \"npm run dev:api\" \"npm --prefix mobile run ios\"",
    "mobile:android": "concurrently \"npm run dev:api\" \"npm --prefix mobile run android\"",
    "start:with-api": "npm run mobile:start",
    "ios:with-api": "npm run mobile:ios",
    "android:with-api": "npm run mobile:android"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.28.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "typescript": "^5.5.3"
  }
}
